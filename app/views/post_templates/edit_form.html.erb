<h1>
  Edit post #<%= @post.id %>
</h1>

<hr>

<!-- Form post start -->
<form action="/update_post/<%= @post.id %>" method="post">
<!-- Form post end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <textarea id="body" name="body" class="form-control" rows="3"><%= @post.body %></textarea>
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <button class="btn btn-block btn-outline-secondary">
    Update post
  </button>
</form>

<hr>

<a href="/posts">
  Go back
</a>
